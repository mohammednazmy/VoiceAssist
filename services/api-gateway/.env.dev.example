# Development Environment - No Docker Services Required
# Copy this to .env for local development without running Qdrant/Postgres/Redis

# Application
APP_NAME=VoiceAssist API Gateway
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Database - Use SQLite for local dev (or connect to remote Postgres)
POSTGRES_USER=voiceassist
POSTGRES_PASSWORD=localdev123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=voiceassist_dev

# Redis - Point to local Redis or use mock (requires REDIS_ENABLED=false in future)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=localdev123

# Qdrant - DISABLE for local development without vector DB
QDRANT_ENABLED=false
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Security (use random values for local dev)
SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET=dev-jwt-secret-not-for-production

# OpenAI - Required for AI features
OPENAI_API_KEY=sk-your-openai-key-here

# Nextcloud - Optional
NEXTCLOUD_URL=http://localhost:8080
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=admin

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
