# pnpm configuration for VoiceAssist monorepo

# Use a single lockfile for the entire workspace
shared-workspace-lockfile=true

# Strict peer dependencies (ensure compatibility)
strict-peer-dependencies=false

# Auto install peers
auto-install-peers=true

# Shamefully hoist (for compatibility with some tools)
shamefully-hoist=false

# Enable workspace protocol
link-workspace-packages=true
