{
  "dashboard": {
    "title": "Voice VAD Personalization & Barge-In Analytics",
    "uid": "voice-vad-personalization",
    "description": "Loki-based view of Silero VAD personalization, barge-in misfire rates, and recommended threshold actions.",
    "tags": ["voiceassist", "voice", "vad", "barge-in", "analytics"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "templating": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Recent Voice VAD Personalization Events",
        "type": "logs",
        "datasource": "Loki",
        "gridPos": { "h": 10, "w": 12, "x": 0, "y": 0 },
        "options": {
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending",
          "wrapLogMessage": true
        },
        "targets": [
          {
            "expr": "{job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json",
            "refId": "A"
          }
        ]
      },
      {
        "id": 2,
        "title": "Personalized VAD Threshold Distribution (24h)",
        "type": "bargauge",
        "datasource": "Loki",
        "gridPos": { "h": 10, "w": 12, "x": 12, "y": 0 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "basic",
          "reduceOptions": {
            "calcs": ["sum"],
            "fields": "",
            "values": false
          },
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json [24h])) by (personalized_vad_threshold)",
            "refId": "A",
            "legendFormat": "{{personalized_vad_threshold}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Recommended Threshold Actions (24h)",
        "type": "bargauge",
        "datasource": "Loki",
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 10 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 10 },
                { "color": "red", "value": 50 }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "basic",
          "reduceOptions": {
            "calcs": ["sum"],
            "fields": "",
            "values": false
          },
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json [24h])) by (recommended_threshold_action)",
            "refId": "A",
            "legendFormat": "{{recommended_threshold_action}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Average Barge-In Misfire Rate by Threshold (1h windows)",
        "type": "timeseries",
        "datasource": "Loki",
        "gridPos": { "h": 8, "w": 16, "x": 8, "y": 10 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 0.1 },
                { "color": "red", "value": 0.3 }
              ]
            },
            "unit": "percent"
          },
          "overrides": []
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull"]
          },
          "tooltip": {
            "mode": "single"
          }
        },
        "targets": [
          {
            "expr": "avg_over_time({job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json | unwrap barge_in_misfire_rate [1h]) by (personalized_vad_threshold)",
            "refId": "A",
            "legendFormat": "{{personalized_vad_threshold}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Sessions by Pipeline State at Disconnect (24h)",
        "type": "bargauge",
        "datasource": "Loki",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "basic",
          "reduceOptions": {
            "calcs": ["sum"],
            "fields": "",
            "values": false
          },
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json [24h])) by (pipeline_state)",
            "refId": "A",
            "legendFormat": "{{pipeline_state}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Transcript History Preference by Environment (24h)",
        "type": "bargauge",
        "datasource": "Loki",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": null }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "basic",
          "reduceOptions": {
            "calcs": ["sum"],
            "fields": "",
            "values": false
          },
          "showUnfilled": true
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"voiceassist\"} |= \"Voice pipeline stopped\" | json [24h])) by (env, store_transcript_history)",
            "refId": "A",
            "legendFormat": "{{env}} / history={{store_transcript_history}}"
          }
        ]
      }
    ]
  }
}
