exclude_dirs:
  - /tests/
  - /venv/
  - /.venv/
  - /migrations/
  - /.git/
  - /node_modules/

skips:
  # Acceptable patterns for this codebase
  - B101  # assert_used - used in tests
  - B110  # try_except_pass - acceptable in some contexts
  - B608  # hardcoded_sql_expressions - we use parameterized queries via SQLAlchemy ORM

  # Error code constants containing "password"/"token" words (not actual secrets)
  - B105  # hardcoded_password_string - error codes like TOKEN_INVALID, INVALID_PASSWORD are not secrets
  - B106  # hardcoded_password_funcarg - "access"/"refresh" are token type strings, not passwords
  - B107  # hardcoded_password_default - same as above

  # Docker/Container patterns
  - B104  # hardcoded_bind_all_interfaces - intentional for Docker container (uvicorn 0.0.0.0)

  # Internal cache serialization (pickle)
  - B301  # pickle - cache_service only deserializes its own serialized data, not untrusted input
  - B403  # import_pickle - same reason, internal cache use only

  # Non-cryptographic hashing
  - B324  # hashlib MD5 - used only for cache key generation, not security purposes
